# print tree
git config --global alias.tree "log --graph --decorate --pretty=oneline --abbrev-commit --all"

# ls-files
git ls-files --others --exclude-standard

# submodule
# refs ( http://josephjiang.com/entry.php?id=342 )
## for creater
git submodule add git@github.com:josephj/javascript-platform-yui.git static/platform
git submodule init ( register submodule into .git/config )
## for others
after git clone...
git submodule init
git submodule update
git submodule update --init --recursive

